<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="graviton.file.controller.file.class">Graviton\FileBundle\Controller\FileController</parameter>
        <parameter key="graviton.file.file_manager.class">Graviton\FileBundle\Manager\FileManager</parameter>
        <parameter key="graviton.file.request_manager.class">Graviton\FileBundle\Manager\RequestManager</parameter>
    </parameters>

    <services>
        <service id="graviton.file.request_manager" class="%graviton.file.request_manager.class%">
            <argument type="service" id="request_stack" on-invalid="null" />
        </service>

        <service id="graviton.file.file_manager" class="%graviton.file.file_manager.class%">
            <argument type="service" key="fileSystem" id="oneup_flysystem.graviton_filesystem"/>
            <argument type="service" key="managerRegistry" id="doctrine_mongodb"/>
            <call method="setAllowedMimeTypes">
                <argument>%graviton.file.allowed.mime_types%</argument>
            </call>
        </service>

        <service id="graviton.file.controller.file"
                 class="%graviton.file.controller.file.class%"
                 parent="graviton.rest.controller">
            <call method="setModel">
                <argument type="service" id="gravitondyn.file.model.file" on-invalid="null" />
            </call>
            <call method="setFileManager">
                <argument type="service" id="graviton.file.file_manager"/>
            </call>
            <call method="setRequestManager">
                <argument type="service" id="graviton.file.request_manager"/>
            </call>
        </service>
    </services>
</container>

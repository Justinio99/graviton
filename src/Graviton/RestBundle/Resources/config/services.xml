<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
      <parameter key="graviton_rest_pager_standard.class">Graviton\RestBundle\Pager\Standard</parameter>
      <parameter key="graviton_rest_parser_rql.class">Graviton\RestBundle\Parser\Rql</parameter>
      <parameter key="graviton.rest.routing.loader.class">Graviton\RestBundle\Routing\Loader\BasicLoader</parameter>
      <parameter key="graviton.rest.listener.selflinkresponselistener.class">Graviton\RestBundle\Listener\SelfLinkResponseListener</parameter>
    </parameters>

    <services>
      <service id="graviton.rest.routing.loader" class="%graviton.rest.routing.loader.class%">
        <call method="setContainer"><argument type="service" id="service_container"/></call>
        <tag name="routing.loader"/>
      </service>
      <service id="graviton.rest.controller" scope="request" abstract="true">
        <call method="setContainer">
          <argument type="service" id="service_container"></argument>
        </call>
        <call method="setSerializeNull"></call>
        <call method="setDeserializeNull"></call>
      </service>
      <service id="graviton.rest.listener.selflinkresponselistener" class="%graviton.rest.listener.selflinkresponselistener.class%">
        <call method="setContainer">
          <argument type="service" id="service_container"></argument>
        </call>
        <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse"/>
      </service>

    <service id="graviton_rest_pager" class="%graviton_rest_pager_standard.class%" scope="request">
        </service>

        <service id="graviton_rest_parser" class="%graviton_rest_parser_rql.class%" scope="request">
        </service>

        <service id="graviton_rest_service_pager" class="%graviton_rest_pager_standard.class%" abstract="true">
        </service>

        <service id="graviton_rest_service_parser" class="%graviton_rest_parser_rql.class%" abstract="true">
        </service>

        <service id="graviton_rest_model" abstract="true">
            <call method="setDoctrine">
                <argument type="service" id="doctrine"></argument>
            </call>
        </service>

    </services>
</container>

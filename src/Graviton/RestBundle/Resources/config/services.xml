<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="graviton_rest_pager_standard.class">Graviton\RestBundle\Pager\Standard</parameter>
        <parameter key="graviton_rest_parser_rql.class">Graviton\RestBundle\Parser\Rql\DoctrineRql</parameter>
    </parameters>

    <services>     
        <service id="graviton_rest_service_pager" class="%graviton_rest_pager_standard.class%" abstract="true">
        </service>
        
        <service id="graviton_rest_service_parser" class="%graviton_rest_parser_rql.class%" abstract="true">
        </service>
           
        <service id="graviton_rest_model" abstract="true"> 
            <call method="setMapper">
                <argument type="service" id="doctrine"></argument>
            </call>
        </service> 

        <service id="graviton.rest.controller" scope="request" abstract="true">
            <call method="setRequest">
                <argument type="service" id="request"></argument>
            </call>
            <call method="setDoctrine">
                <argument type="service" id="doctrine"></argument>
            </call>
            <call method="setSerializer">
                <argument type="service" id="serializer"></argument>
            </call>
            <call method="setValidator">
                <argument type="service" id="validator"></argument>
            </call>
            <call method="setSerializeNull"></call>
            <call method="setDeserializeNull"></call>
        </service> 
        
    </services>
</container>

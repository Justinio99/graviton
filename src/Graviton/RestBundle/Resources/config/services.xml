<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="graviton_rest_action_write.class">Graviton\RestBundle\Action\RestActionWrite</parameter>
        <parameter key="graviton_rest_action_read.class">Graviton\RestBundle\Action\RestActionRead</parameter>
        <parameter key="graviton_rest_mapper.class">Graviton\RestBundle\Mapper\EntityService</parameter>
    </parameters>

    <services>        
        <service id="graviton_rest_service_mapper" class="%graviton_rest_mapper.class%">
            <argument type="service" id="router"></argument>
        </service>
        <service id="graviton_rest_action_read" class="%graviton_rest_action_read.class%">
            <argument type="service" id="doctrine"></argument>
            <argument type="service" id="graviton_rest_service_mapper"></argument>
            <argument type="service" id="serializer"></argument>
        </service>
        
         <service id="graviton_rest_action_write" class="%graviton_rest_action_write.class%">
            <argument type="service" id="doctrine"></argument>
            <argument type="service" id="serializer"></argument>
            <argument type="service" id="validator"></argument>
            <argument type="service" id="router"></argument>
         </service>

        <service id="graviton.rest.controller" abstract="true">
            <call method="setRestActionRead">
                <argument type="service" id="graviton_rest_action_read"></argument>
            </call>
            <call method="setRestActionWrite">
                <argument type="service" id="graviton_rest_action_write"></argument>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"></argument>
            </call>
        </service> 
        
    </services>
</container>

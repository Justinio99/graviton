<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="graviton.message.documenteventpublisher.class">Graviton\MessageBundle\Service\DocumentEventPublisher</parameter>
        <parameter key="graviton.message.consumer.dump.class">Graviton\MessageBundle\Service\DumpConsumer</parameter>
        <parameter key="graviton.rest.routing.collection.class">Symfony\Component\Routing\RouteCollection</parameter>
    </parameters>
    <services>
        <service id="graviton.message.consumer.dump" class="%graviton.message.consumer.dump.class%" />
        <service id="graviton.message.jobproducer" parent="old_sound_rabbit_mq.job_producer">
            <property name="registeredRoutingKeys">%graviton.message.registeredroutingkeys%</property>
        </service>
        <service id="graviton.message.documenteventpublisher" class="%graviton.message.documenteventpublisher.class%">
            <argument type="service" id="graviton.message.jobproducer" />
            <argument type="service" id="logger" />
            <argument type="service" id="router" />
            <tag name="doctrine_mongodb.odm.event_subscriber" />
            <property name="documents">%graviton.message.documents%</property>
        </service>

        <service id="graviton.rest.routing.collection" class="%graviton.rest.routing.collection.class%"/>
        <service id="graviton.rest.routing.loader" class="%graviton.rest.routing.loader.class%">
            <argument type="service" id="graviton.rest.routing.collection"/>
            <argument>%graviton.rest.services%</argument>
            <tag name="routing.loader"/>
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gravitoncorebundle.controller.app.class">Graviton\CoreBundle\Controller\AppController</parameter>
        <parameter key="gravitoncorebundle.repository.app.class">Graviton\CoreBundle\Repository\AppRepository</parameter>
        <parameter key="gravitoncorebundle.model.app.class">Graviton\CoreBundle\Model\App</parameter>
    </parameters>

    <services>
        <service id="gravitoncorebundle.controller.app"
            class="%gravitoncorebundle.controller.app.class%"
            parent="graviton.rest.controller" scope="request">
            <call method="setModel">
                <argument type="service" id="gravitoncorebundle.model.app"/>
        </call>
        </service>

        <service id="gravitoncorebundle.repository.app"
            class="%gravitoncorebundle.repository.app.class%"
            factory-service="doctrine_mongodb.odm.core_document_manager"
            factory-method="getRepository">
            <argument type="string">GravitonCoreBundle:App</argument>
        </service>

    <service id="gravitoncorebundle.model.app"
        class="%gravitoncorebundle.model.app.class%"
        parent="graviton_rest_model">
            <argument type="service" id="gravitoncorebundle.repository.app"/>
    </service>

    </services>

</container>

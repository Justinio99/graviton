    "service": {
        "readOnly": false,
        "routerBase": "/core/app/",
        "fixtures": []
    },
    "target": {
        "indexes": [
          "key",
          "default",
          "value"
        ],
        "relations": [],
        "fields": [
            {
                "name": "id",
                "type": "varchar",
                "title": "ID",

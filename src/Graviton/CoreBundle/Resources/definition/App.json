            },
            {
                "name": "name",
                "type": "varchar",
                "title": "Name",
                "description": "Name of the app",
                "required": true,
                "translatable": true
            },
            {
                "name": "showInMenu",
                "type": "boolean",
                "title": "Show in menu",
                "description": "If this app should be shown in the menu or not",
                "required": true
            },
            {
                "name": "order",
                "type": "int",
                "title": "Order",
                "description": "Order sorting field"
            }
        ]
    }
}

<?xml version="1.0" encoding="UTF-8"?>
<serializer>
  <class name="{{ base }}Document\{{ document }}">

{% if idField is defined %}
    <property name="id" type="{{ idField.typeSerializer }}" accessor-getter="getId"/>
{% else %}
    <property name="id" type="string" accessor-getter="getId"/>
{% endif %}

{% for field in fields %}
    <property name="{{ field.fieldName }}" accessor-getter="get{{ field.fieldName|capitalize }}" accessor-setter="set{{ field.fieldName|capitalize }}">
      <type><![CDATA[{{ field.serializerType }}]]></type>
    </property>
{% endfor %}
  </class>
</serializer>
